<Page x:Class="Banker.VIEW.PAGE_MONTH"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Banker.VIEW"
      mc:Ignorable="d" Loaded="Page_Loaded"
      d:DesignHeight="450" d:DesignWidth="800">

    <ListBox ItemsSource="{Binding datalist}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding BANK}"/>
                    <TextBlock Grid.Column="1" Text="{Binding PRICE}"/>
                    <TextBlock Grid.Column="1" Text="{Binding USE}"/>
                    <TextBlock Grid.Column="1" Text="{Binding MAKE}"/>
                    <TextBlock Grid.Column="1" Text="{Binding TOTAL}"/>
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</Page>
